rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------------------------------------------------------
    // Helper functions
    // -----------------------------------------------------------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // -----------------------------------------------------------------------
    // Users collection
    // -----------------------------------------------------------------------
    match /users/{userId} {
      // Anyone authenticated can read user profiles (needed for marketplace)
      allow read: if isAuthenticated();

      // Users can only create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);

      // No user deletion from client
      allow delete: if false;
    }

    // -----------------------------------------------------------------------
    // Bookings collection
    // -----------------------------------------------------------------------
    match /bookings/{bookingId} {
      // Users can read bookings where they are student or mentor
      allow read: if isAuthenticated()
        && (resource.data.studentId == request.auth.uid
            || resource.data.mentorId == request.auth.uid);

      // Any authenticated user can create a booking (as student)
      allow create: if isAuthenticated()
        && request.resource.data.studentId == request.auth.uid;

      // Both student and mentor can update (status changes)
      allow update: if isAuthenticated()
        && (resource.data.studentId == request.auth.uid
            || resource.data.mentorId == request.auth.uid);

      // No deletion from client
      allow delete: if false;
    }

    // -----------------------------------------------------------------------
    // Conversations collection
    // -----------------------------------------------------------------------
    match /conversations/{conversationId} {
      // Only participants can read the conversation
      allow read: if isAuthenticated()
        && request.auth.uid in resource.data.participants;

      // Authenticated users can create conversations
      allow create: if isAuthenticated()
        && request.auth.uid in request.resource.data.participants;

      // Only participants can update (e.g. lastMessage, readBy)
      allow update: if isAuthenticated()
        && request.auth.uid in resource.data.participants;

      allow delete: if false;

      // Messages sub-collection
      match /messages/{messageId} {
        // Only conversation participants can read messages
        allow read: if isAuthenticated()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;

        // Only participants can send messages; senderId must match auth uid
        allow create: if isAuthenticated()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants
          && request.resource.data.senderId == request.auth.uid;

        allow update, delete: if false;
      }
    }

    // -----------------------------------------------------------------------
    // Reviews collection
    // -----------------------------------------------------------------------
    match /reviews/{reviewId} {
      // Anyone authenticated can read reviews (displayed on mentor profiles)
      allow read: if isAuthenticated();

      // Only the reviewer (student) can create a review
      allow create: if isAuthenticated()
        && request.resource.data.studentId == request.auth.uid;

      // No edits or deletion of reviews
      allow update, delete: if false;
    }
  }
}
